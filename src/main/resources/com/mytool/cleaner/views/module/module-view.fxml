<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mytool.cleaner.controller.module.ModuleController"
            fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED"
            minWidth="${controller.menuWidth}" maxWidth="${controller.menuWidth}">

  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>

  <VBox alignment="TOP_CENTER" spacing="10.0">

    <Button fx:id="uninstall" text="应用卸载" prefWidth="${controller.maxValue}" prefHeight="80"
            onMouseClicked="#onUninstallButtonClick"/>

    <Button fx:id="diskSpace" text="空间透视" prefWidth="${controller.maxValue}" prefHeight="80"
            onMouseClicked="#onDiskSpaceButtonClick"/>

  </VBox>

</ScrollPane>
