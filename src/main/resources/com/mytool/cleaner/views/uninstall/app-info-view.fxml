<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:id="rightScrollableList"
            fx:controller="com.mytool.cleaner.controller.uninstall.AppInfoController"
            fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED">

  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>

  <!-- App详情信息 -->
  <VBox>
    <HBox HBox.hgrow="ALWAYS" fx:id="appDetailPane">
      <padding>
        <Insets left="40.0" top="10.0" right="40.0" bottom="10.0"/>
      </padding>
      <ImageView fx:id="appIcon" fitWidth="128" fitHeight="128"/>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <HBox fx:id="appDetailText" HBox.hgrow="ALWAYS">
          <padding>
            <Insets left="40.0" top="10.0" right="40.0" bottom="10.0"/>
          </padding>
          <Text fx:id="appName" text="名称"/>
          <Pane HBox.hgrow="ALWAYS"/>
          <Text fx:id="appInstallTime" text="安装时间"/>
        </HBox>
        <Pane prefHeight="1" HBox.hgrow="ALWAYS" style="-fx-background-color: #e0e0e0;"/>
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
          <padding>
            <Insets left="40.0" top="10.0" right="40.0" bottom="10.0"/>
          </padding>
          <Text fx:id="appVersion" text="版本"/>
          <Pane HBox.hgrow="ALWAYS"/>
          <Text fx:id="appSize" text="大小"/>
        </HBox>
      </VBox>
    </HBox>

    <!-- App分组文件信息 -->
    <TreeView fx:id="appFileListView">
      <TreeItem fx:id="appFileListItem">
        <!-- 解析应用信息后通过代码拼装生成分组文件 -->
      </TreeItem>
    </TreeView>
  </VBox>

</ScrollPane>
